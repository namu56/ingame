{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@core/*": ["src/core/*"],
      "@entities/*": ["src/entities/*"],
      "@migrations/*": ["src/migrations/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["src/**/*"]
}
