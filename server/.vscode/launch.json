{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJs in Docker",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**" // node_modules 스킵 추가
      ]
    }
  ]
}
